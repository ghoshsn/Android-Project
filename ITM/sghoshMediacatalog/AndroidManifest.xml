<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="20" android:versionName="2.0.0" package="com.iit.sghosh.mediacatalog">
      
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:allowClearUserData="true" android:description="@string/app_description">
    	<activity android:name="MediacatalogMedia" android:label="@string/app_name">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
        <activity android:name="MediacatalogMain" android:label="@string/app_name" android:windowSoftInputMode="stateVisible|adjustPan" />
	    <activity android:name="MediacatalogEditMedia" android:windowSoftInputMode="stateVisible|adjustPan"></activity>
		<activity android:name="MediacatalogFileBrowser" android:windowSoftInputMode="stateVisible|adjustPan"></activity>
		<activity android:name="MediacatalogCategories" android:windowSoftInputMode="stateVisible|adjustPan"></activity>
		<activity android:name="MediacatalogEditCategory" android:windowSoftInputMode="stateVisible|adjustPan"></activity>
		<activity android:name="MediacatalogPreferences" android:windowSoftInputMode="stateVisible|adjustPan"></activity>
		<activity android:name="MediacatalogAbout" android:windowSoftInputMode="stateVisible|adjustPan"></activity>
	</application>
	
	<uses-sdk android:minSdkVersion="8"></uses-sdk>
	
</manifest> 